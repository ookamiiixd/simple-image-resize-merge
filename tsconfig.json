{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "outDir": "lib/",
    "strict": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },

  "include": ["src/**/*.ts"]
}
